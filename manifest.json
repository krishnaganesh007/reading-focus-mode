{
    "manifest_version": 3,
    "name": "Reading Focus Mode",
    "version": "1.0",
    "description": "Remove distractions and enhance reading experience with ad blocking, font changes, and theme modes",
    "permissions": [
      "activeTab",
      "storage",
      "declarativeNetRequest",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "declarative_net_request": {
      "rule_resources": [{
        "id": "adblock_rules",
        "enabled": true,
        "path": "rules.json"
      }]
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["focus-mode.css"]
    }],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Reading Focus Mode"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png", 
      "128": "icons/icon128.png"
    }
  }
  